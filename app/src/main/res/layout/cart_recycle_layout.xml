<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:layout_margin="5dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_cloth"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/name_cloth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lone Clothes"
            android:textColor="@color/darkblue"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="27dp" />


        <TextView
            android:id="@+id/cart_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size 7 meter"
            android:textColor="@color/darkblue"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="46dp" />


        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$14.99"
            android:textColor="@color/darkblue"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="64dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/status_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@color/darkblue"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="362dp"
            tools:layout_editor_absoluteY="18dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="64dp">

            <TextView
                android:id="@+id/AddBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="+"
                android:textColor="@color/darkblue"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/qtyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1"
                android:textColor="@color/darkblue"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/SubtractBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="-"
                android:textColor="@color/darkblue"
                android:textSize="10dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>