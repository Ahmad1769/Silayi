<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Silayi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkblue</item>
        <item name="colorSecondaryVariant">@color/lightblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="darkBlueButton">
        <item name="android:background">@drawable/buttonround</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item> <!-- Replaced dimension with direct value -->
    </style>

    <style name="WhiteButton">
        <item name="android:background">@drawable/whiteroundbutton</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textSize">12sp</item> <!-- Replaced dimension with direct value -->
        <item name="android:paddingStart">12dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:paddingEnd">12dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:drawableEnd">@drawable/baseline_arrow_forward</item>
    </style>

    <style name="customInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:background">@drawable/buttonround</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:drawablePadding">12dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:paddingStart">12dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:layout_marginRight">24dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:layout_marginLeft">24dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:paddingEnd">12dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:textSize">14dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:textColorHint">@color/lightblue</item>
    </style>

    <style name="profiletextStyle">
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textSize">14dp</item> <!-- Replaced dimension with direct value -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SimpleprofiletextStyle">
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textSize">12dp</item> <!-- Replaced dimension with direct value -->
    </style>

<style name="Theme.Silayi" parent="Base.Theme.Silayi" />

<style name="ThemeOverlay.Silayi.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
